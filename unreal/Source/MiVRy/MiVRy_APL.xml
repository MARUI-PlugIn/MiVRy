<?xml version="1.0" encoding="utf-8"?>
<!--MiVRy additions-->
<root xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- init section is always evaluated once per architecture -->
	<init>
		<!-- currently only support armv7 -->
		<setBool result="bSupported" value="false"/>
		<isArch arch="arm64-v8a">
			<setBool result="bSupported" value="true"/>
		</isArch>
		<isArch arch="armeabi-v7a">
			<setBool result="bSupported" value="true"/>
		</isArch>
		
		<if condition="bSupported">
			<false>
				<log text="WARNING: this architecture is not supported for libgesturerecognition.so!"/>
			</false>
		</if>
	</init>

	<!-- optional files or directories to copy to Intermediate/Android/APK -->
	<resourceCopies>
		<isArch arch="arm64-v8a">
			<copyFile src="$S(PluginDir)/Source/ThirdParty/MiVRy/Android/arm_64/libgesturerecognition.so"
				dst="$S(BuildDir)/libs/arm64-v8a/libgesturerecognition.so" />
		</isArch>
		<isArch arch="armeabi-v7a">
			<copyFile src="$S(PluginDir)/Source/ThirdParty/MiVRy/Android/arm_32/libgesturerecognition.so"
				dst="$S(BuildDir)/libs/armeabi-v7a/libgesturerecognition.so" />
		</isArch>
	</resourceCopies>
</root>


